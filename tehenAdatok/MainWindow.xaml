<Window x:Class="tehenAdatok.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tehenAdatok"
        mc:Ignorable="d"
        Title="Happy-Cows Nyírség Kft." Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ComboBox x:Name="cbx_Nap" SelectedIndex="2" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Top" Width="120" Margin="78,100,0,0"/>
        <Button Content="Lekérdezés" HorizontalAlignment="Center" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"  Click="Button_Click_1" />
        <Button Content="Kilépés" HorizontalAlignment="Center" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center"  Click="Button_Click"/>
        <Label Content="Szarvasmarha azonosítója:" HorizontalAlignment="Left" Margin="100,10,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <TextBox x:Name="tbx_TehenId" HorizontalAlignment="Left" Margin="100,41,0,0" Grid.Row="1" TextWrapping="Wrap" Text="BA" VerticalAlignment="Top" Width="129"/>
        <Label Content="Tejhozam lekérdezése" HorizontalAlignment="Left" Grid.ColumnSpan="2" VerticalAlignment="Center" FontSize="24" Margin="280,0,0,0"/>
        <Slider 
            x:Name="sl_TejLimit"
            Height="25"
            Minimum="15" 
            Maximum="25" 
            Value="20" 
            Grid.Row="1" 
            Grid.Column="1" 
            Margin="133,60,88,59"
            Grid.ColumnSpan="2" 
            ValueChanged="sl_TejLimit_ValueChanged" />
        <Label
               HorizontalAlignment="Left"
               Grid.Row="1" Grid.Column="1"
               VerticalAlignment="Bottom"
               Width="200" 
               Margin="133,0,0,34"
               x:Name="lb_Ertek">
            <Label.Content>
                <Binding ElementName="sl_TejLimit"
                         Path="Value"
                         StringFormat="Beállított érték {0:F0} liter"
                         ></Binding>
            </Label.Content>
        </Label>
            <Label Content="Tej limit:" HorizontalAlignment="Left"  Grid.Row="1" Grid.Column="2" VerticalAlignment="Top" Margin="47,32,0,0"/>
        <Label Content="15 liter" HorizontalAlignment="Left"   Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" Margin="74,54,0,0"/>
        <Label Content="25 liter" HorizontalAlignment="Right"  Grid.Row="1" Grid.Column="2" VerticalAlignment="Top" Margin="0,55,21,0"/>

    </Grid>
</Window>
